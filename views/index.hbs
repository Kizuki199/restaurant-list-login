{{!-- ./views/index.handlebars --}}
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="form-group col-md-3">
    <form action="/" method="GET">

      <label for="sorting">選擇排序方式：</label>
      <select name="sort" class="form-control btn-outline-secondary" id='inputType' onchange="this.form.submit()"
        style="cursor: pointer;">
        <option value="name" {{#ifeq sort 'name' }} selected {{/ifeq}}>名稱（A -> Z）</option>
        <option value="category" {{#ifeq sort 'category' }} selected {{/ifeq}}>餐廳類別</option>
        <option value="location" {{#ifeq sort 'location' }} selected {{/ifeq}}>餐廳地點</option>
        <option value="rating" {{#ifeq sort 'rating' }} selected {{/ifeq}}>評分（低 -> 高）</option>
      </select>
    </form>
  </div>

</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each RestaurantListModels}}
        <a href="/restaurant/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
        </a>
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>

          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i> {{this.category}}
          </div>

          <span class="badge badge-pill badge-info font-weight-normal">
            {{this.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>

          <a href="/restaurant/{{this._id}}/edit" style="text-decoration :none">
            <span class="badge font-weight-normal text-primary">
              <i class="fas fa-edit"></i>
            </span>
          </a>


          <form action="/restaurant/{{this._id}}?_method=delete" method="post" style="display: inline; ">
            <span class="badge font-weight-normal">
              <button type="submit" style="background: none; padding: 0px; border: none; cursor : pointer;"><i
                  class="fas fa-trash text-danger"></i></button>
            </span>
          </form>

        </div>
      </div>
      {{/each}}

    </div>
  </div>
  </a>
</div>
</div>
</div>
</div>